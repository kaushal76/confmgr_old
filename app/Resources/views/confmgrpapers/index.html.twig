{% extends 'base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Papers List</h1>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Date created</th>
                <th>Date modified</th>
                <th>Created by</th>
                <th>Updated by</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for confmgrPaper in confmgrPapers %}
                <tr>
                    <td><a href="{{ path('papers_show', { 'id': confmgrPaper.id }) }}">{{ confmgrPaper.id }}</a></td>
                    <td>{{ confmgrPaper.paperTitle }}</td>
                    <td>{% if confmgrPaper.paperDateCreated %}{{ confmgrPaper.paperDateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if confmgrPaper.paperDateModified %}{{ confmgrPaper.paperDateModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ confmgrPaper.paperCreatedBy }}</td>
                    <td>{{ confmgrPaper.paperUpdatedBy }}</td>
                    <td>
                        <div class="btn-group">
                            <a role="button" class="btn btn-default"
                               href="{{ path('papers_show', { 'id': confmgrPaper.id }) }}">show</a>
                            <a role="button" class="btn btn-default"
                               href="{{ path('papers_edit', { 'id': confmgrPaper.id }) }}">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="panel-footer">
            <a role="button" class="btn btn-default" href="{{ path('papers_new') }}">Create a new entry</a>
        </div>
    </div>
{% endblock %}
