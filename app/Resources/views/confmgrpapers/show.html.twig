{% extends 'base.html.twig' %}

{% block body %}
    <h1>ConfmgrPapers</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ confmgrPaper.id }}</td>
            </tr>
            <tr>
                <th>Papertitle</th>
                <td>{{ confmgrPaper.paperTitle }}</td>
            </tr>
            <tr>
                <th>Paperowner</th>
                <td>{{ confmgrPaper.paperOwner }}</td>
            </tr>
            <tr>
                <th>Paperabstract</th>
                <td>{{ confmgrPaper.paperAbstract }}</td>
            </tr>
            <tr>
                <th>Paperfullpaper</th>
                <td>{{ confmgrPaper.paperFullPaper }}</td>
            </tr>
            <tr>
                <th>Papercameraready</th>
                <td>{{ confmgrPaper.paperCameraReady }}</td>
            </tr>
            <tr>
                <th>Papertheme</th>
                <td>{{ confmgrPaper.paperTheme }}</td>
            </tr>
            <tr>
                <th>Paperdatecreated</th>
                <td>{% if confmgrPaper.paperDateCreated %}{{ confmgrPaper.paperDateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Paperdatemodified</th>
                <td>{% if confmgrPaper.paperDateModified %}{{ confmgrPaper.paperDateModified|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('papers_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('papers_edit', { 'id': confmgrPaper.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
